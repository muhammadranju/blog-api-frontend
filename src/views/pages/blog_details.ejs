          <div class="comment_counts between_part mb_30">
            <img src="../../assets/images/comment_counts.png" alt="Icon">
            <span>Comments</span>
          </div>

          <form method="POST" autocomplete="off" id="frmComments" class="comments_form mb_60">
            <div class="in-box gap0">
              <input type="text" class="form-control" id="comments" name="comments" placeholder="Write A Comment">
              <button type="submit" class="btn_theme x_large font_400" name="comments_submit" id="comments_submit">Submit</button>
            </div>
            <span id="commentsMsg"></span>
          </form>

          <div class="comments_area">
            <% for ( comment of post?.comments){ %>
            <% if(comment?.status==="APPROVED"){%>
            <div class="single_comments mt_30">
              <div class="gap30">
                <div class="author_img">
                  <img src="../../assets/images/clients_comments.png" width="500px" alt="image">
                </div>
                <div class="author_content">
                  <div class="between_part gap10 mb_20">
                    <h5 class="author_name"><%=comment?.author%></h5>
                    <span>05 day ago</span>
                  </div>
                  <p><%=comment?.bodyText%></p>
                </div>
              </div>
            </div>
            <% } %>
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="side_bar part_md_pt">
          <form method="POST" autocomplete="off" id="search" class="search_box mb_20">
            <div class="in-box between_two_part">
              <input type="text" class="form-control" placeholder="Search">
              <button type="submit" class="search_icon"> <i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
          </form>
          <div class="post_category mb_40">
            <h4 class="mb_30">Post Category</h4>
            <p class="category_list">Travel</p>
            <p class="category_list">Design</p>
            <p class="category_list">Fitness</p>
            <p class="category_list">Tecnology</p>
          </div>
          <div class="latest_post">
            <h4 class="mb_30">Latest Post</h4>

            <% for (post of latestPost){ %>
            <% if(post?.status==="PUBLISHED"){ %>
            <div class="part mb_30">
              <div class="gap30">
                <a href="/posts/<%=post?.title_url,%>">
                  <img src="<%=post.cover %>" width="100px" class="rounded" alt="Image">
                </a>
                <div class="content">
                  <p class="mb_10 post_content"><%=post?.title?.slice(0,25)?.concat("...") %></p>
                  <div class="between_part name small_text">
                    <span class="material-symbols-outlined"> alarm_on </span>
                    21 JUN, 2022
                  </div>
                </div>
              </div>
            </div>
            <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
